{
  "name": "@112dev/phunt-typeguards",
  "version": "1.0.0-beta.2",
  "license": "Apache-2.0",
  "types": "./dist/index.d.ts",
  "exports": {
    "types": "./dist/index.d.ts",
    "require": "./dist/index.cjs",
    "import": "./dist/index.mjs"
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "rollup --config rollup.config.mjs",
